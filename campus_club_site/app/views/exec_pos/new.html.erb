


<% if logged_in? %>				

	<h1>Add an Executive Position</h1>
	<div class="row">
	  <div class="col-md-6 col-md-offset-3">  
		<%= form_for (@execPo) do |f| %>
			<%= render 'shared/error_messages_exec_po'%>

			<%= f.label :position,'Position Name' %>
			<%= f.text_field :position, class: 'form-control' %>
			
			<%= f.label :User,'Select the User' %>

			<select name="user_id">
				<%= @users.each do |user| %>
				<option value="<%= user.id %>"><%= user.firstname %>  <%= user.lastname %></option>
				<% end %>
			</select>

			<%= f.submit "Create Executive Position", class:"btn btn-primary" %>
		<% end %>

			

	
	  </div>
	</div>

<% else %>
	
	<h1>Must be logged into Campus Clubs to add an Executive Positon</h1>

<% end %>

