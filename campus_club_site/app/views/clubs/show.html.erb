<% provide(:title, @club.name) %>

<div class="row">
	<h1><%= @club.name %></h1>
</div>
<!-- User Club ToolBar -->
<div class="row">
	<div class="col-sm-2 text-left">
		
		<p class = "btn btn-default">
			<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
			<%= link_to "Edit Club", edit_club_path(@club.id)%>
		</p>
		
	</div>

	<div class="col-sm-8">

	</div>

	<!-- TODO Figure out how to do favorite functionality with AJAX-->

	<div class="col-sm-2 text-right">
		<%
		if(@user.clubs.exists?(@club.id))
		%>
		<p class = "btn btn-default">
			<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
			<%=link_to "UNFavorite", unfavorite_path(:id => @club.id)%>
		</p>
		<% 
		else
		%>
		<p class = "btn btn-default">
			<span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
			<%=link_to "Favorite", favorite_path%>
		</p>
		<%
		end
		%>
	</div>

</div>


<!-- Club Information -->

<div class="row">
	<div class="col-sm-3">
		<table class="table table-condensed">
			<tr>
				<th>Meeting Time and Location</th>
			</tr>
			<tr>
				<td><%=@club.meetTime %> @ <%=@club.meetLoc %></td>
			</tr>
		</table>

	</div>

	<div class="col-sm-6">
		<table class="table condensed">
			<tr>
				<th>Description</th>
			</tr>
			<tr>
				<td><%= @club.desc %></td>
			</tr>
		</table>

	</div>

	<div class="col-sm-3">
		<table class="table table-condensed" > 
			<tr> 
				<th>Member Name</th>
				<th id="test">Position</th>
			</tr>

			<tr>
				<td>Patrick Kelly</td>
				<td>President</td>
			</tr>
		</table>

	</div>
	<p><%=@user.id%></p>
</div>
