<% provide(:title, 'Your Campus Clubs')%>
<!-- Enrolled Clubs Below-->


<div class="row ">
	<div class="col-md-1 "></div><!-- Formatting -->

	<div class="col-md-2 jumbotron"><!-- This is the users tool box -->
		<div class="row div-center">
				<p>
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
						<b><u>Executive Tools<u/></b>
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
				</p>

				<div class="row">

					<div class="col-md-12">
						<a class="btn btn-primary btn-sm btn-block" href="clubAdd" role="button" >Add Club</a>


					</div>

				</div>
		</div>

	</div>

	<div class="col-md-5 jumbotron"><!-- This is where the user sees the clubs they are eboard of and favotire as well -->
		<div class="row">
			<h2 class="text-center">
				<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
					Your Campus Clubs
				<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
			</h2>
			<table class= "table table-hover table-condensed">
				<tr>
					<th>Your Club Name</th>
					<th>Meeting Times</th>
				</tr>


				<%= render @users%><!-- The @users object really deals with the club objects. I believe this is the case because we are gathering the club objects from within the users controller -->
			</table>
			
			<%= will_paginate %>

		</div>

		<div class="row">
			<h2 class="text-center">
				<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
					Favorites
				<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
			</h2>
			<table class= "table table-hover table-condensed">
				<table class= "table table-hover table-condensed">
					<tr>
						<th>Your Club Name</th>
						<th>Meeting Times</th>
					</tr>
					
					<%= render @userClubs%>
				</table>

			</table>
				
		</div>



	</div>

	<div class="col-md-3 jumbotron"><!-- This is where the user is capable of seeing the eboard they are a part of -->
		<div class="row">
			<h2 class="text-center">
				<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
				Executive Clubs and Positions
				<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
			</h2>
			<table class= "table table-hover table-condensed">
				<tr>
					<th>Executive Position</th>
					<th>Club Name </th>
				</tr>


			</table>

		</div>
	</div>

	<div class="col-md-1 "></div><!-- This is temporary spacing on the side for formattting-->

</div>











